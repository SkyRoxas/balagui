include mixin/cover-banner
include mixin/head

doctype html
html
  +head('歸國')
  body
    #page(style="overflow: hidden;")
      header.section.page-header
        .container
          include components/header_top
          include components/menu
      #banner
        +cover-banner('./images/requisitos_banner.png', '480px')
      #page
        .container
          main
            h1(class="page-title") 歸國
            .content_repatriacion_wrapper
              ul.list
                li.list-item.highlight <a href="https://www.dropbox.com/s/8k87z1g1imt0gz4/%28%E6%AD%B8%E5%9C%8B%E7%94%B3%E8%AB%8B%E8%A1%A8%29SOLICITUD%20DE%20REPATRIACION.pdf?dl=0">填寫申請表</a>
